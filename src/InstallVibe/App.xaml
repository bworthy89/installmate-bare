<Application
    x:Class="InstallVibe.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:InstallVibe.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Add custom resource dictionaries here -->
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:BoolToTextConverter x:Key="BoolToTextConverter" />
            <converters:BoolToGlyphConverter x:Key="BoolToGlyphConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
            <converters:DateTimeToStringConverter x:Key="DateTimeToStringConverter" />
            <converters:FileSizeConverter x:Key="FileSizeConverter" />
            <converters:LicenseTypeToColorConverter x:Key="LicenseTypeToColorConverter" />
            <converters:MediaTypeToIconConverter x:Key="MediaTypeToIconConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
