<UserControl
    x:Class="InstallVibe.Controls.UpdateBannerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <InfoBar x:Name="UpdateInfoBar"
             IsOpen="False"
             IsClosable="True"
             Closed="UpdateInfoBar_Closed">

        <InfoBar.Content>
            <StackPanel Spacing="12">
                <!-- Update Information -->
                <TextBlock x:Name="UpdateMessageText"
                           TextWrapping="Wrap"
                           FontSize="14"/>

                <!-- Version Information -->
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Current:"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock x:Name="CurrentVersionText"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="â†’"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="New:"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock x:Name="NewVersionText"
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource SystemAccentColor}"/>
                </StackPanel>

                <!-- Release Notes -->
                <Expander x:Name="ReleaseNotesExpander"
                          Header="What's New"
                          IsExpanded="False"
                          HorizontalAlignment="Stretch">
                    <ScrollViewer MaxHeight="200"
                                  Margin="0,8,0,0">
                        <TextBlock x:Name="ReleaseNotesText"
                                   TextWrapping="Wrap"
                                   FontSize="13"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </ScrollViewer>
                </Expander>

                <!-- Download Progress -->
                <StackPanel x:Name="DownloadProgressPanel"
                            Visibility="Collapsed"
                            Spacing="8">
                    <ProgressBar x:Name="DownloadProgressBar"
                                 Minimum="0"
                                 Maximum="100"
                                 Value="0"/>
                    <TextBlock x:Name="DownloadProgressText"
                               FontSize="12"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal"
                            Spacing="12"
                            Margin="0,8,0,0">
                    <Button x:Name="UpdateNowButton"
                            Content="Update Now"
                            Click="UpdateNow_Click"
                            Style="{StaticResource AccentButtonStyle}"/>
                    <Button x:Name="UpdateLaterButton"
                            Content="Later"
                            Click="UpdateLater_Click"
                            Visibility="{x:Bind IsOptionalUpdate, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    <Button x:Name="ViewDetailsButton"
                            Content="View Details"
                            Click="ViewDetails_Click"
                            Visibility="Collapsed"/>
                </StackPanel>
            </StackPanel>
        </InfoBar.Content>
    </InfoBar>
</UserControl>
