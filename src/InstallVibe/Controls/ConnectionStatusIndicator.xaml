<UserControl
    x:Class="InstallVibe.Controls.ConnectionStatusIndicator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border Background="{x:Bind StatusBackgroundBrush, Mode=OneWay}"
            BorderBrush="{x:Bind StatusBorderBrush, Mode=OneWay}"
            BorderThickness="1"
            CornerRadius="12"
            Padding="8,4"
            ToolTipService.ToolTip="{x:Bind StatusTooltip, Mode=OneWay}">
        <StackPanel Orientation="Horizontal" Spacing="6">
            <!-- Status Icon -->
            <FontIcon Glyph="{x:Bind StatusIcon, Mode=OneWay}"
                      FontSize="12"
                      Foreground="{x:Bind StatusForegroundBrush, Mode=OneWay}"/>

            <!-- Status Text -->
            <TextBlock Text="{x:Bind StatusText, Mode=OneWay}"
                       FontSize="12"
                       FontWeight="SemiBold"
                       Foreground="{x:Bind StatusForegroundBrush, Mode=OneWay}"/>

            <!-- Sync Indicator -->
            <ProgressRing IsActive="{x:Bind IsSyncing, Mode=OneWay}"
                          Width="12"
                          Height="12"
                          Visibility="{x:Bind IsSyncing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </StackPanel>
    </Border>
</UserControl>
