<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Card Styles -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <Style x:Key="CardBorderStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- Button Styles -->
    <Style x:Key="IconButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style x:Key="NavigationButtonStyle" TargetType="Button">
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <!-- Text Styles -->
    <Style x:Key="PageHeaderTextStyle" TargetType="TextBlock" BasedOn="{StaticResource TitleTextBlockStyle}">
        <Setter Property="Margin" Value="0,0,0,24"/>
    </Style>

    <Style x:Key="SectionHeaderTextStyle" TargetType="TextBlock" BasedOn="{StaticResource SubtitleTextBlockStyle}">
        <Setter Property="Margin" Value="0,16,0,8"/>
    </Style>

    <Style x:Key="CaptionTextStyle" TargetType="TextBlock" BasedOn="{StaticResource CaptionTextBlockStyle}">
        <Setter Property="Opacity" Value="0.6"/>
    </Style>

    <!-- List Item Styles -->
    <Style x:Key="ListItemStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- Info Bar Styles -->
    <Style x:Key="SuccessInfoBarStyle" TargetType="InfoBar">
        <Setter Property="Severity" Value="Success"/>
        <Setter Property="IsClosable" Value="True"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <Style x:Key="ErrorInfoBarStyle" TargetType="InfoBar">
        <Setter Property="Severity" Value="Error"/>
        <Setter Property="IsClosable" Value="True"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <Style x:Key="WarningInfoBarStyle" TargetType="InfoBar">
        <Setter Property="Severity" Value="Warning"/>
        <Setter Property="IsClosable" Value="True"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <!-- Progress Styles -->
    <Style x:Key="PageProgressRingStyle" TargetType="ProgressRing">
        <Setter Property="Width" Value="60"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Container Styles -->
    <Style x:Key="ContentStackPanelStyle" TargetType="StackPanel">
        <Setter Property="Spacing" Value="24"/>
        <Setter Property="Padding" Value="24"/>
    </Style>

    <Style x:Key="FormStackPanelStyle" TargetType="StackPanel">
        <Setter Property="Spacing" Value="16"/>
    </Style>

    <!-- Spacing Resources -->
    <x:Double x:Key="SpacingExtraSmall">4</x:Double>
    <x:Double x:Key="SpacingSmall">8</x:Double>
    <x:Double x:Key="SpacingMedium">12</x:Double>
    <x:Double x:Key="SpacingLarge">16</x:Double>
    <x:Double x:Key="SpacingExtraLarge">24</x:Double>
    <x:Double x:Key="SpacingHuge">32</x:Double>

    <!-- Corner Radius Resources -->
    <CornerRadius x:Key="CornerRadiusSmall">4</CornerRadius>
    <CornerRadius x:Key="CornerRadiusMedium">8</CornerRadius>
    <CornerRadius x:Key="CornerRadiusLarge">12</CornerRadius>

    <!-- Animation Durations -->
    <Duration x:Key="AnimationDurationFast">0:0:0.2</Duration>
    <Duration x:Key="AnimationDurationNormal">0:0:0.3</Duration>
    <Duration x:Key="AnimationDurationSlow">0:0:0.5</Duration>

</ResourceDictionary>
