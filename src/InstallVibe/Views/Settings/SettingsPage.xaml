<Page
    x:Class="InstallVibe.Views.Settings.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer>
            <StackPanel Margin="24" Spacing="32" MaxWidth="800">
                <!-- Back Button -->
                <Button
                    Command="{x:Bind ViewModel.GoBackCommand}"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Padding="8"
                    Margin="-8,0,0,8"
                    HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE72B;" FontSize="16"/>
                        <TextBlock Text="Back to Dashboard"/>
                    </StackPanel>
                </Button>

                <!-- Page Title -->
                <TextBlock
                    Text="Settings"
                    Style="{ThemeResource TitleLargeTextBlockStyle}"
                    FontWeight="SemiBold"/>

                <!-- Appearance Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Appearance" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <StackPanel Spacing="16" Margin="0,8,0,0">
                        <ComboBox
                            SelectedItem="{x:Bind ViewModel.Theme, Mode=TwoWay}"
                            Width="300"
                            HorizontalAlignment="Left"
                            AutomationProperties.Name="Theme selection">
                            <ComboBox.Header>
                                <TextBlock Text="Theme" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            </ComboBox.Header>
                            <ComboBoxItem Content="System"/>
                            <ComboBoxItem Content="Light"/>
                            <ComboBoxItem Content="Dark"/>
                        </ComboBox>
                        <TextBlock Text="Choose how InstallVibe looks. System matches your Windows theme."
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,-8,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Synchronization Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Synchronization" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <StackPanel Spacing="16" Margin="0,8,0,0">
                        <ToggleSwitch
                            IsOn="{x:Bind ViewModel.AutoSync, Mode=TwoWay}"
                            AutomationProperties.Name="Auto sync toggle">
                            <ToggleSwitch.Header>
                                <TextBlock Text="Auto Sync" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            </ToggleSwitch.Header>
                            <ToggleSwitch.OnContent>
                                <TextBlock Text="On"/>
                            </ToggleSwitch.OnContent>
                            <ToggleSwitch.OffContent>
                                <TextBlock Text="Off"/>
                            </ToggleSwitch.OffContent>
                        </ToggleSwitch>
                        <TextBlock Text="Automatically sync guides from SharePoint at the specified interval"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,-8,0,0"/>

                        <NumberBox
                            Value="{x:Bind ViewModel.SyncInterval, Mode=TwoWay}"
                            Minimum="1"
                            Maximum="1440"
                            Width="300"
                            HorizontalAlignment="Left"
                            AutomationProperties.Name="Sync interval in minutes">
                            <NumberBox.Header>
                                <TextBlock Text="Sync Interval (minutes)" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            </NumberBox.Header>
                        </NumberBox>
                        <TextBlock Text="How often to check for updates (1-1440 minutes)"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,-8,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Storage Section -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Storage" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <StackPanel Spacing="16" Margin="0,8,0,0">
                        <NumberBox
                            Value="{x:Bind ViewModel.CacheLimit, Mode=TwoWay}"
                            Minimum="100"
                            Maximum="10000"
                            Width="300"
                            HorizontalAlignment="Left"
                            AutomationProperties.Name="Cache limit in megabytes">
                            <NumberBox.Header>
                                <TextBlock Text="Cache Limit (MB)" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            </NumberBox.Header>
                        </NumberBox>
                        <TextBlock Text="Maximum disk space for cached guides and media (100-10,000 MB)"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,-8,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Button
                        Content="Save Changes"
                        Command="{x:Bind ViewModel.SaveSettingsCommand}"
                        Style="{ThemeResource AccentButtonStyle}"
                        AutomationProperties.Name="Save settings changes"/>

                    <Button
                        Content="Reset to Defaults"
                        Command="{x:Bind ViewModel.ResetSettingsCommand}"
                        AutomationProperties.Name="Reset all settings to default values"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
