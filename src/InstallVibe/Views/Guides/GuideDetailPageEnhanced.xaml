<Page
    x:Class="InstallVibe.Views.Guides.GuideDetailPageEnhanced"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:InstallVibe.ViewModels.Guides"
    xmlns:controls="using:InstallVibe.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">

    <Page.Resources>
        <Storyboard x:Name="PageEntranceStoryboard">
            <DoubleAnimation Storyboard.TargetName="ContentRoot"
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetName="ContentTransform"
                           Storyboard.TargetProperty="Y"
                           From="30" To="0" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Page.Resources>

    <Grid x:Name="ContentRoot">
        <Grid.RenderTransform>
            <TranslateTransform x:Name="ContentTransform"/>
        </Grid.RenderTransform>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Enhanced Header with Connection Status -->
        <Grid Grid.Row="0"
              Background="{ThemeResource LayerFillColorDefaultBrush}"
              Padding="32,24"
              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
              BorderThickness="0,0,0,1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Connection Status in Top Right -->
            <controls:ConnectionStatusIndicator Grid.Row="0"
                                              x:Name="ConnectionStatus"
                                              HorizontalAlignment="Right"
                                              Margin="0,0,0,16"/>

            <!-- Guide Title - Extra Large for Readability -->
            <TextBlock Grid.Row="1"
                       Text="{x:Bind ViewModel.Guide.Metadata.Title, Mode=OneWay}"
                       FontSize="32"
                       FontWeight="Bold"
                       TextWrapping="Wrap"
                       LineHeight="40"
                       Margin="0,0,0,20"/>

            <!-- Enhanced Progress Display -->
            <Grid Grid.Row="2" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Current Step Badge -->
                <Border Grid.Column="0"
                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                        CornerRadius="20"
                        Padding="16,8"
                        Margin="0,0,16,0">
                    <TextBlock FontSize="18"
                              FontWeight="Bold"
                              Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}">
                        <Run Text="Step"/>
                        <Run Text="{x:Bind ViewModel.CurrentStepIndex, Mode=OneWay}"/>
                        <Run Text="/"/>
                        <Run Text="{x:Bind ViewModel.TotalSteps, Mode=OneWay}"/>
                    </TextBlock>
                </Border>

                <!-- Progress Percentage -->
                <TextBlock Grid.Column="2"
                          FontSize="20"
                          FontWeight="Bold"
                          VerticalAlignment="Center">
                    <Run Text="{x:Bind ViewModel.ProgressPercentage, Mode=OneWay}"/>
                    <Run Text="%"/>
                </TextBlock>
            </Grid>

            <!-- Enhanced Progress Bar -->
            <Border Grid.Row="3"
                    Background="{ThemeResource ControlFillColorDefaultBrush}"
                    CornerRadius="6"
                    Height="12">
                <ProgressBar Value="{x:Bind ViewModel.ProgressPercentage, Mode=OneWay}"
                             Maximum="100"
                             Height="12"
                             CornerRadius="6"
                             BorderThickness="0"
                             Background="Transparent"/>
            </Border>
        </Grid>

        <!-- Enhanced Step Content -->
        <ScrollViewer Grid.Row="1"
                      Padding="32,24"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="32" MaxWidth="1200">
                <!-- Error Message -->
                <InfoBar Severity="Error"
                         Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                         IsOpen="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource StringToBoolConverter}}"
                         IsClosable="True"
                         Visibility="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Loading Skeleton -->
                <ContentControl Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                               ContentTemplate="{StaticResource StepContentSkeletonTemplate}"/>

                <!-- Step Content -->
                <StackPanel Spacing="24"
                            Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">

                    <!-- Step Title - Extra Large -->
                    <TextBlock Text="{x:Bind ViewModel.CurrentStep.Title, Mode=OneWay}"
                              FontSize="28"
                              FontWeight="SemiBold"
                              TextWrapping="Wrap"
                              LineHeight="36"/>

                    <!-- Step Description - Larger for Technicians -->
                    <TextBlock Text="{x:Bind ViewModel.CurrentStep.Description, Mode=OneWay}"
                              FontSize="18"
                              TextWrapping="Wrap"
                              LineHeight="28"
                              Opacity="0.9"/>

                    <!-- Media Carousel with Zoom -->
                    <controls:MediaCarouselControl MediaItems="{x:Bind ViewModel.CurrentStep.MediaReferences, Mode=OneWay}"
                                                  Visibility="{x:Bind ViewModel.CurrentStep.MediaReferences.Count, Mode=OneWay, Converter={StaticResource ZeroToVisibilityConverter}}"
                                                  Margin="0,8,0,0"/>

                    <!-- Step Instructions - Large Text -->
                    <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="24"
                            Margin="0,8,0,0">
                        <RichTextBlock TextWrapping="Wrap"
                                      FontSize="17"
                                      LineHeight="26">
                            <!-- Instructions will be data-bound -->
                        </RichTextBlock>
                    </Border>

                    <!-- Checklist Items - Larger Touch Targets -->
                    <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="20"
                            Visibility="{x:Bind ViewModel.CurrentStep.ChecklistItems.Count, Mode=OneWay, Converter={StaticResource ZeroToVisibilityConverter}}">
                        <StackPanel Spacing="4">
                            <TextBlock Text="Checklist"
                                      FontSize="20"
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,12"/>
                            <ItemsRepeater ItemsSource="{x:Bind ViewModel.CurrentStep.ChecklistItems, Mode=OneWay}">
                                <ItemsRepeater.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Text}"
                                                 IsChecked="{Binding IsCompleted, Mode=TwoWay}"
                                                 FontSize="17"
                                                 MinHeight="48"
                                                 Margin="0,0,0,8"/>
                                    </DataTemplate>
                                </ItemsRepeater.ItemTemplate>
                            </ItemsRepeater>
                        </StackPanel>
                    </Border>

                    <!-- Mark Complete Button - Large and Prominent -->
                    <Button Command="{x:Bind ViewModel.MarkStepCompleteCommand}"
                            HorizontalAlignment="Stretch"
                            Height="56"
                            FontSize="18"
                            Margin="0,16,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <SymbolIcon Symbol="Accept" FontSize="20"/>
                            <TextBlock Text="Mark Step Complete" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Completion State - Enhanced -->
                <StackPanel Spacing="24"
                            HorizontalAlignment="Center"
                            Padding="32"
                            Visibility="{x:Bind ViewModel.IsCompleted, Mode=OneWay}">
                    <Border Background="{ThemeResource AccentFillColorDefaultBrush}"
                            Width="120"
                            Height="120"
                            CornerRadius="60">
                        <SymbolIcon Symbol="Accept"
                                   FontSize="72"
                                   Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                    </Border>
                    <TextBlock Text="Guide Completed!"
                              FontSize="32"
                              FontWeight="Bold"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="You have successfully completed this installation guide."
                              FontSize="18"
                              HorizontalAlignment="Center"
                              TextAlignment="Center"
                              TextWrapping="Wrap"
                              Opacity="0.8"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Enhanced Navigation Footer -->
        <Grid Grid.Row="2"
              Background="{ThemeResource LayerFillColorDefaultBrush}"
              Padding="32,20"
              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
              BorderThickness="0,1,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Previous Button - Larger -->
            <Button Grid.Column="0"
                    Command="{x:Bind ViewModel.PreviousStepCommand}"
                    IsEnabled="{x:Bind ViewModel.CanNavigatePrevious, Mode=OneWay}"
                    MinWidth="140"
                    Height="48"
                    FontSize="16"
                    Margin="0,0,16,0"
                    AccessKey="P">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <SymbolIcon Symbol="Back" FontSize="18"/>
                    <TextBlock Text="Previous" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>

            <!-- Cancel Button -->
            <Button Grid.Column="1"
                    Command="{x:Bind ViewModel.CancelCommand}"
                    HorizontalAlignment="Center"
                    MinWidth="120"
                    Height="48"
                    FontSize="16"
                    AccessKey="C">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <SymbolIcon Symbol="Cancel" FontSize="18"/>
                    <TextBlock Text="Cancel"/>
                </StackPanel>
            </Button>

            <!-- Next Button - Larger and Accent -->
            <Button Grid.Column="2"
                    Command="{x:Bind ViewModel.NextStepCommand}"
                    IsEnabled="{x:Bind ViewModel.CanNavigateNext, Mode=OneWay}"
                    Style="{StaticResource AccentButtonStyle}"
                    MinWidth="140"
                    Height="48"
                    FontSize="16"
                    AccessKey="N">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock FontWeight="SemiBold">
                        <Run Text="{x:Bind ViewModel.IsCompleted, Mode=OneWay, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Complete|Next'}"/>
                    </TextBlock>
                    <SymbolIcon Symbol="Forward" FontSize="18"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>
