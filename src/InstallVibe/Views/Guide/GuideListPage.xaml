<Page
    x:Name="RootPage"
    x:Class="InstallVibe.Views.Guides.GuideListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:domain="using:InstallVibe.Core.Models.Domain"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Back Button & Title-->
        <Grid Grid.Row="0" Margin="24,16,24,12">
            <Button
                Command="{x:Bind ViewModel.GoBackCommand}"
                Background="Transparent"
                BorderBrush="Transparent"
                Padding="8"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE72B;" FontSize="16"/>
                    <TextBlock Text="Back to Dashboard"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Filter Bar -->
        <Border Grid.Row="1"
                Background="{ThemeResource LayerFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,1"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Category Filter -->
                <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,8,0" Spacing="4">
                    <TextBlock Text="Category"
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <ComboBox ItemsSource="{x:Bind ViewModel.AvailableCategories}"
                              SelectedItem="{x:Bind ViewModel.SelectedCategory, Mode=TwoWay}"
                              HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Difficulty Filter -->
                <StackPanel Grid.Column="1" Grid.Row="0" Margin="8,0,8,0" Spacing="4">
                    <TextBlock Text="Difficulty"
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <ComboBox ItemsSource="{x:Bind ViewModel.AvailableDifficulties}"
                              SelectedItem="{x:Bind ViewModel.SelectedDifficulty, Mode=TwoWay}"
                              HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Search Box -->
                <StackPanel Grid.Column="2" Grid.Row="0" Margin="8,0,8,0" Spacing="4">
                    <TextBlock Text="Search"
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBox Text="{x:Bind ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             PlaceholderText="ðŸ” Search by title, description, author, tags..."
                             HorizontalAlignment="Stretch"/>
                </StackPanel>

                <!-- Clear Filters Button -->
                <Button Grid.Column="3" Grid.Row="0"
                        Command="{x:Bind ViewModel.ClearFiltersCommand}"
                        VerticalAlignment="Bottom"
                        Margin="8,0,0,0"
                        IsEnabled="{x:Bind ViewModel.HasActiveFilters, Mode=OneWay}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE894;" FontSize="14"/>
                        <TextBlock Text="Clear"/>
                    </StackPanel>
                </Button>

                <!-- Tag Filters -->
                <StackPanel Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="1" Margin="0,12,0,0" Spacing="4"
                            Visibility="{x:Bind ViewModel.AvailableTags, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock Text="Tags (select multiple)"
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <ItemsControl ItemsSource="{x:Bind ViewModel.AvailableTags, Mode=OneWay}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="8"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <ToggleButton Content="{x:Bind}"
                                              Command="{Binding DataContext.ToggleTagCommand, ElementName=RootPage}"
                                              CommandParameter="{x:Bind}"
                                              Style="{ThemeResource DefaultToggleButtonStyle}"
                                              MinWidth="80"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Toolbar (Sort & View Toggle) -->
        <Border Grid.Row="2"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                Padding="24,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Filter Summary -->
                <TextBlock Grid.Column="0"
                           Text="{x:Bind ViewModel.FilterSummary, Mode=OneWay}"
                           Style="{StaticResource BodyTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           VerticalAlignment="Center"/>

                <!-- Sort & View Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                    <!-- Sort ComboBox -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Sort by:"
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <ComboBox ItemsSource="{x:Bind ViewModel.SortOptions}"
                                  SelectedItem="{x:Bind ViewModel.SortBy, Mode=TwoWay}"
                                  MinWidth="120"/>
                    </StackPanel>

                    <!-- Sort Direction Toggle -->
                    <Button Command="{x:Bind ViewModel.ToggleSortDirectionCommand}"
                            ToolTipService.ToolTip="Toggle sort direction">
                        <FontIcon Glyph="{x:Bind ViewModel.SortAscending, Mode=OneWay, Converter={StaticResource BoolToGlyphConverter}, ConverterParameter='&#xE898;|&#xE8A0;'}"
                                  FontSize="16"/>
                    </Button>

                    <!-- View Toggle -->
                    <ToggleButton IsChecked="{x:Bind ViewModel.IsGridView, Mode=TwoWay}"
                                  ToolTipService.ToolTip="Toggle view mode">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE80A;" FontSize="16"/>
                            <TextBlock Text="{x:Bind ViewModel.IsGridView, Mode=OneWay, Converter={StaticResource BoolToTextConverter}, ConverterParameter='Grid|List'}"/>
                        </StackPanel>
                    </ToggleButton>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Row="3" Margin="24">
            <!-- Loading State -->
            <ProgressRing IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                          Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                          Width="48" Height="48"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>

            <!-- Grid View (Cards) -->
            <ScrollViewer Visibility="{x:Bind ViewModel.IsGridView, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.FilteredGuides, Mode=OneWay}">
                    <ItemsRepeater.Layout>
                        <UniformGridLayout MinItemWidth="320"
                                         MinItemHeight="220"
                                         ItemsStretch="Fill"
                                         MinColumnSpacing="16"
                                         MinRowSpacing="16"/>
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="domain:Guide">
                            <Button Command="{Binding DataContext.SelectGuideCommand, ElementName=RootPage}"
                                    CommandParameter="{x:Bind}"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Stretch"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0">
                                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="16">
                                    <Grid RowSpacing="12">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Header (Category & Difficulty) -->
                                        <Grid Grid.Row="0">
                                            <Border Background="{ThemeResource AccentFillColorDefaultBrush}"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    HorizontalAlignment="Left">
                                                <TextBlock Text="{x:Bind Category}"
                                                           Style="{StaticResource CaptionTextBlockStyle}"
                                                           FontWeight="SemiBold"
                                                           Foreground="White"/>
                                            </Border>
                                            <Border Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    HorizontalAlignment="Right">
                                                <TextBlock Text="{x:Bind Difficulty}"
                                                           Style="{StaticResource CaptionTextBlockStyle}"/>
                                            </Border>
                                        </Grid>

                                        <!-- Content -->
                                        <StackPanel Grid.Row="1" Spacing="8">
                                            <TextBlock Text="{x:Bind Title}"
                                                       Style="{StaticResource SubtitleTextBlockStyle}"
                                                       FontWeight="SemiBold"
                                                       TextWrapping="Wrap"
                                                       MaxLines="2"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{x:Bind Description}"
                                                       Style="{StaticResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       TextWrapping="Wrap"
                                                       MaxLines="3"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>

                                        <!-- Footer (Steps & Time) -->
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16">
                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                    <FontIcon Glyph="&#xE8FD;" FontSize="14"
                                                              Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                                    <TextBlock Text="{x:Bind StepCount}"
                                                               Style="{StaticResource CaptionTextBlockStyle}"/>
                                                    <TextBlock Text="steps"
                                                               Style="{StaticResource CaptionTextBlockStyle}"
                                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4">
                                                <FontIcon Glyph="&#xE121;" FontSize="14"
                                                          Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                                                <TextBlock Text="{x:Bind EstimatedTime}"
                                                           Style="{StaticResource CaptionTextBlockStyle}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Button>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </ScrollViewer>

            <!-- List View (Compact) -->
            <ListView ItemsSource="{x:Bind ViewModel.FilteredGuides, Mode=OneWay}"
                      Visibility="{x:Bind ViewModel.IsGridView, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                      SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="domain:Guide">
                        <Button Command="{Binding DataContext.SelectGuideCommand, ElementName=RootPage}"
                                CommandParameter="{x:Bind}"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Stretch"
                                Padding="12"
                                Background="Transparent">
                            <Grid ColumnSpacing="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Category Badge -->
                                <Border Grid.Column="0"
                                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                                        CornerRadius="4"
                                        Padding="8,4"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{x:Bind Category}"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               FontWeight="SemiBold"
                                               Foreground="White"/>
                                </Border>

                                <!-- Title & Description -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                    <TextBlock Text="{x:Bind Title}"
                                               Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                    <TextBlock Text="{x:Bind Description}"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               TextTrimming="CharacterEllipsis"
                                               MaxLines="1"/>
                                </StackPanel>

                                <!-- Difficulty -->
                                <Border Grid.Column="2"
                                        Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                        CornerRadius="4"
                                        Padding="8,4"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{x:Bind Difficulty}"
                                               Style="{StaticResource CaptionTextBlockStyle}"/>
                                </Border>

                                <!-- Steps -->
                                <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                                    <FontIcon Glyph="&#xE8FD;" FontSize="14"/>
                                    <TextBlock Text="{x:Bind StepCount}"
                                               Style="{StaticResource CaptionTextBlockStyle}"/>
                                </StackPanel>

                                <!-- Time -->
                                <StackPanel Grid.Column="4" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                                    <FontIcon Glyph="&#xE121;" FontSize="14"/>
                                    <TextBlock Text="{x:Bind EstimatedTime}"
                                               Style="{StaticResource CaptionTextBlockStyle}"/>
                                </StackPanel>
                            </Grid>
                        </Button>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Page>
