<Page
    x:Class="InstallVibe.Views.Guides.StepPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <ScrollViewer>
            <StackPanel Margin="24" Spacing="16">
                <TextBlock
                    Text="{x:Bind ViewModel.CurrentStep.Title, Mode=OneWay}"
                    Style="{ThemeResource TitleTextBlockStyle}"/>

                <TextBlock
                    Text="{x:Bind ViewModel.CurrentStep.Content, Mode=OneWay}"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    TextWrapping="Wrap"/>

                <TextBox
                    Text="{x:Bind ViewModel.Notes, Mode=TwoWay}"
                    PlaceholderText="Add notes..."
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    Height="100"/>

                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Button
                        Content="Complete"
                        Command="{x:Bind ViewModel.CompleteStepCommand}"
                        Style="{ThemeResource AccentButtonStyle}"/>

                    <Button
                        Content="Skip"
                        Command="{x:Bind ViewModel.SkipStepCommand}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
