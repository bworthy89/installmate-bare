<Page
    x:Class="InstallVibe.Views.Editor.GuideEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:editor="using:InstallVibe.ViewModels.Editor"
    xmlns:controls="using:InstallVibe.Controls"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <Page.Resources>
        <SolidColorBrush x:Key="DragOverBrush" Color="{ThemeResource SystemAccentColor}" Opacity="0.3"/>

        <Style x:Key="StepCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <DataTemplate x:Key="StepItemTemplate">
            <Border Style="{StaticResource StepCardStyle}"
                    AllowDrop="True"
                    DragStarting="StepCard_DragStarting"
                    Drop="StepCard_Drop"
                    DragOver="StepCard_DragOver"
                    DragLeave="StepCard_DragLeave">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Drag Handle -->
                    <FontIcon Grid.Column="0"
                              Glyph="&#xE76F;"
                              FontSize="16"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                              Margin="0,0,12,0"
                              VerticalAlignment="Center"/>

                    <!-- Step Info -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="{Binding Title}"
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding Instructions}"
                                   FontSize="14"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   TextTrimming="CharacterEllipsis"
                                   MaxLines="2"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Actions -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                Spacing="8">
                        <Button Content="&#xE70F;"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="16"
                                ToolTipService.ToolTip="Move Up"
                                Command="{Binding DataContext.MoveStepUpCommand, ElementName=PageRoot}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource IconButtonStyle}"/>
                        <Button Content="&#xE74B;"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="16"
                                ToolTipService.ToolTip="Move Down"
                                Command="{Binding DataContext.MoveStepDownCommand, ElementName=PageRoot}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource IconButtonStyle}"/>
                        <Button Content="&#xE8C8;"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="16"
                                ToolTipService.ToolTip="Duplicate"
                                Command="{Binding DataContext.DuplicateStepCommand, ElementName=PageRoot}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource IconButtonStyle}"/>
                        <Button Content="&#xE74D;"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="16"
                                ToolTipService.ToolTip="Delete"
                                Command="{Binding DataContext.DeleteStepCommand, ElementName=PageRoot}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource IconButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid x:Name="PageRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0"
              Background="{ThemeResource LayerFillColorDefaultBrush}"
              Padding="24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="{x:Bind ViewModel.IsNewGuide, Mode=OneWay, Converter={StaticResource NewGuideTitleConverter}}"
                           FontSize="28"
                           FontWeight="Bold"/>
                <TextBlock Text="{x:Bind ViewModel.GuideTitle, Mode=OneWay}"
                           FontSize="18"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        Spacing="12">
                <Button Content="Preview"
                        Command="{x:Bind ViewModel.TogglePreviewModeCommand}"
                        Style="{StaticResource AccentButtonStyle}">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="P" Modifiers="Control"/>
                    </Button.KeyboardAccelerators>
                </Button>
                <Button Content="Save Draft"
                        Command="{x:Bind ViewModel.SaveDraftCommand}">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="S" Modifiers="Control"/>
                    </Button.KeyboardAccelerators>
                </Button>
                <Button Content="Publish"
                        Command="{x:Bind ViewModel.PublishGuideCommand}"
                        Style="{StaticResource AccentButtonStyle}">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="P" Modifiers="Control,Shift"/>
                    </Button.KeyboardAccelerators>
                </Button>
                <Button Content="Cancel"
                        Command="{x:Bind ViewModel.CancelCommand}">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Escape"/>
                    </Button.KeyboardAccelerators>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1" Padding="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Guide Metadata & Steps -->
            <ScrollViewer Grid.Column="0">
                <StackPanel Spacing="24">
                    <!-- Guide Metadata -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Guide Information"
                                       FontSize="20"
                                       FontWeight="SemiBold"/>

                            <TextBox Header="Title"
                                     Text="{x:Bind ViewModel.GuideTitle, Mode=TwoWay}"
                                     PlaceholderText="Enter guide title"/>

                            <TextBox Header="Description"
                                     Text="{x:Bind ViewModel.GuideDescription, Mode=TwoWay}"
                                     PlaceholderText="Enter guide description"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     MinHeight="80"/>

                            <ComboBox Header="Category"
                                      SelectedItem="{x:Bind ViewModel.GuideCategory, Mode=TwoWay}"
                                      PlaceholderText="Select category"
                                      HorizontalAlignment="Stretch">
                                <x:String>Hardware</x:String>
                                <x:String>Software</x:String>
                                <x:String>Network</x:String>
                                <x:String>System</x:String>
                                <x:String>Security</x:String>
                            </ComboBox>

                            <ComboBox Header="Difficulty"
                                      SelectedItem="{x:Bind ViewModel.GuideDifficulty, Mode=TwoWay}"
                                      HorizontalAlignment="Stretch">
                                <x:String>Beginner</x:String>
                                <x:String>Intermediate</x:String>
                                <x:String>Advanced</x:String>
                                <x:String>Expert</x:String>
                            </ComboBox>

                            <NumberBox Header="Estimated Duration (minutes)"
                                       Value="{x:Bind ViewModel.EstimatedMinutes, Mode=TwoWay}"
                                       Minimum="1"
                                       Maximum="480"
                                       SpinButtonPlacementMode="Inline"/>

                            <StackPanel>
                                <TextBlock Text="Version"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0"
                                             Text="{x:Bind ViewModel.GuideVersion, Mode=TwoWay}"
                                             IsReadOnly="True"/>
                                    <Button Grid.Column="1"
                                            Content="Patch"
                                            Command="{x:Bind ViewModel.IncrementMinorVersionCommand}"
                                            Margin="8,0,0,0"/>
                                    <Button Grid.Column="2"
                                            Content="Major"
                                            Command="{x:Bind ViewModel.IncrementMajorVersionCommand}"
                                            Margin="8,0,0,0"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel>
                                <CheckBox Content="Requires Internet Connection"
                                          IsChecked="{x:Bind ViewModel.RequiresInternet, Mode=TwoWay}"/>
                                <CheckBox Content="Requires Network Access"
                                          IsChecked="{x:Bind ViewModel.RequiresNetwork, Mode=TwoWay}"
                                          Margin="0,8,0,0"/>
                            </StackPanel>

                            <!-- Tags -->
                            <StackPanel>
                                <TextBlock Text="Tags"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0"
                                             Text="{x:Bind ViewModel.TagInput, Mode=TwoWay}"
                                             PlaceholderText="Add tag"/>
                                    <Button Grid.Column="1"
                                            Content="Add"
                                            Command="{x:Bind ViewModel.AddTagCommand}"
                                            Margin="8,0,0,0"/>
                                </Grid>
                                <ItemsControl ItemsSource="{x:Bind ViewModel.Tags, Mode=OneWay}"
                                              Margin="0,8,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{ThemeResource AccentFillColorDefaultBrush}"
                                                    CornerRadius="12"
                                                    Padding="12,4"
                                                    Margin="0,0,8,8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding}"
                                                               Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                                                    <Button Grid.Column="1"
                                                            Content="&#xE711;"
                                                            FontFamily="Segoe MDL2 Assets"
                                                            FontSize="12"
                                                            Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                                                            Background="Transparent"
                                                            Command="{Binding DataContext.RemoveTagCommand, ElementName=PageRoot}"
                                                            CommandParameter="{Binding}"
                                                            Margin="8,0,0,0"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <ItemsWrapGrid Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Steps List -->
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <Grid Margin="0,0,0,16">
                                <TextBlock Text="Steps"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                                <Button Content="Add Step"
                                        Command="{x:Bind ViewModel.AddStepCommand}"
                                        HorizontalAlignment="Right"
                                        Style="{StaticResource AccentButtonStyle}"/>
                            </Grid>

                            <ListView x:Name="StepsListView"
                                      ItemsSource="{x:Bind ViewModel.Steps, Mode=OneWay}"
                                      SelectedItem="{x:Bind ViewModel.SelectedStep, Mode=TwoWay}"
                                      ItemTemplate="{StaticResource StepItemTemplate}"
                                      SelectionMode="Single"
                                      AllowDrop="True"
                                      CanReorderItems="True"
                                      CanDragItems="True"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Right Panel: Step Editor -->
            <Border Grid.Column="2"
                    Style="{StaticResource CardStyle}"
                    Visibility="{x:Bind ViewModel.SelectedStep, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                <ScrollViewer>
                    <controls:StepEditorControl x:Name="StepEditorControl"/>
                </ScrollViewer>
            </Border>

            <!-- Empty State -->
            <StackPanel Grid.Column="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{x:Bind ViewModel.SelectedStep, Mode=OneWay, Converter={StaticResource InverseNullToVisibilityConverter}}">
                <FontIcon Glyph="&#xE8A5;"
                          FontSize="64"
                          Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                <TextBlock Text="Select a step to edit"
                           FontSize="18"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Validation Messages -->
        <InfoBar Grid.Row="2"
                 IsOpen="{x:Bind ViewModel.HasValidationErrors, Mode=OneWay}"
                 Severity="Error"
                 Title="Validation Errors"
                 Message="{x:Bind ViewModel.ValidationMessage, Mode=OneWay}"
                 Margin="24,0,24,24">
            <InfoBar.Content>
                <ItemsControl ItemsSource="{x:Bind ViewModel.ValidationErrors, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"
                                       FontSize="14"
                                       Margin="0,4,0,0"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </InfoBar.Content>
        </InfoBar>

        <!-- Loading Overlay -->
        <Grid Grid.Row="0"
              Grid.RowSpan="3"
              Background="{ThemeResource LayerFillColorDefaultBrush}"
              Opacity="0.9"
              Visibility="{x:Bind ViewModel.IsPublishing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <ProgressRing IsActive="True"
                              Width="60"
                              Height="60"/>
                <TextBlock Text="Publishing to SharePoint..."
                           FontSize="18"
                           Margin="0,16,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
