<Page
    x:Class="InstallVibe.Views.About.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:InstallVibe.ViewModels.About"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Padding="24" Spacing="32" MaxWidth="700" HorizontalAlignment="Center">
            <!-- App Icon and Name -->
            <StackPanel HorizontalAlignment="Center" Spacing="16">
                <Border Width="120"
                        Height="120"
                        CornerRadius="12"
                        Background="{ThemeResource SystemAccentColor}"
                        HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE946;"
                              FontSize="64"
                              Foreground="White"/>
                </Border>

                <TextBlock Text="{x:Bind ViewModel.AppName, Mode=OneWay}"
                           Style="{StaticResource TitleLargeTextBlockStyle}"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="{x:Bind ViewModel.AppVersion, Mode=OneWay}"
                           Style="{StaticResource BodyTextBlockStyle}"
                           HorizontalAlignment="Center"
                           Opacity="0.8"/>
            </StackPanel>

            <!-- Description -->
            <TextBlock Text="{x:Bind ViewModel.AppDescription, Mode=OneWay}"
                       Style="{StaticResource BodyTextBlockStyle}"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Opacity="0.8"/>

            <!-- License Information -->
            <StackPanel Spacing="16">
                <TextBlock Text="License Information"
                           Style="{StaticResource SubtitleTextBlockStyle}"/>

                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <SymbolIcon Symbol="{x:Bind ViewModel.IsLicensed, Mode=OneWay, Converter={StaticResource BoolToSymbolConverter}, ConverterParameter='Accept|Important'}"
                                        Foreground="{x:Bind ViewModel.IsLicensed, Mode=OneWay, Converter={StaticResource BoolToColorConverter}}"/>
                            <StackPanel Spacing="4">
                                <TextBlock Text="{x:Bind ViewModel.LicenseType, Mode=OneWay}"
                                           Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                <TextBlock Text="{x:Bind ViewModel.LicenseStatus, Mode=OneWay}"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Opacity="0.8"/>
                            </StackPanel>
                        </StackPanel>

                        <Button Command="{x:Bind ViewModel.OpenLicenseCommand}"
                                HorizontalAlignment="Left"
                                Visibility="{x:Bind ViewModel.IsLicensed, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <SymbolIcon Symbol="Permissions"/>
                                <TextBlock Text="Activate License"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Links -->
            <StackPanel Spacing="16">
                <TextBlock Text="Resources"
                           Style="{StaticResource SubtitleTextBlockStyle}"/>

                <StackPanel Spacing="8">
                    <HyperlinkButton Command="{x:Bind ViewModel.OpenGitHubCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <SymbolIcon Symbol="Globe"/>
                            <TextBlock Text="Visit our website"/>
                        </StackPanel>
                    </HyperlinkButton>

                    <HyperlinkButton>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <SymbolIcon Symbol="Help"/>
                            <TextBlock Text="Documentation"/>
                        </StackPanel>
                    </HyperlinkButton>

                    <HyperlinkButton>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <SymbolIcon Symbol="Mail"/>
                            <TextBlock Text="Contact support"/>
                        </StackPanel>
                    </HyperlinkButton>
                </StackPanel>
            </StackPanel>

            <!-- System Information -->
            <StackPanel Spacing="16">
                <TextBlock Text="System Information"
                           Style="{StaticResource SubtitleTextBlockStyle}"/>

                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                    <StackPanel Spacing="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Operating System:"
                                       Opacity="0.8"
                                       Margin="0,0,16,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="Windows 11"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Framework:"
                                       Opacity="0.8"
                                       Margin="0,0,16,0"/>
                            <TextBlock Grid.Column="1"
                                       Text=".NET 8.0"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="UI Framework:"
                                       Opacity="0.8"
                                       Margin="0,0,16,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="WinUI 3"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Check for Updates -->
            <Button Command="{x:Bind ViewModel.CheckForUpdatesCommand}"
                    HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <SymbolIcon Symbol="Download"/>
                    <TextBlock Text="Check for updates"/>
                </StackPanel>
            </Button>

            <!-- Copyright -->
            <TextBlock Text="{x:Bind ViewModel.Copyright, Mode=OneWay}"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       HorizontalAlignment="Center"
                       Opacity="0.6"
                       Margin="0,16,0,0"/>
        </StackPanel>
    </ScrollViewer>
</Page>
