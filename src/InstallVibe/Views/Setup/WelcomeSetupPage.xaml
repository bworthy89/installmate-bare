<Page
    x:Class="InstallVibe.Views.Setup.WelcomeSetupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <!-- Background gradient for professional look -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="{ThemeResource SystemAccentColorLight1}" Offset="0"/>
                <GradientStop Color="{ThemeResource SystemAccentColor}" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid MaxWidth="600" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Spacing="32" Padding="40">

                <!-- Step Indicator -->
                <TextBlock Text="Step 1 of 2"
                          Style="{StaticResource CaptionTextBlockStyle}"
                          Foreground="White"
                          Opacity="0.8"
                          HorizontalAlignment="Center"/>

                <!-- App Icon/Logo -->
                <Viewbox Width="120" Height="120" HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE74C;" Foreground="White"/>
                </Viewbox>

                <!-- Welcome Header -->
                <StackPanel Spacing="12">
                    <TextBlock Text="Welcome to InstallVibe"
                              Style="{StaticResource TitleLargeTextBlockStyle}"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              FontWeight="SemiBold"/>

                    <TextBlock Text="Professional Installation Guide Management"
                              Style="{StaticResource SubtitleTextBlockStyle}"
                              Foreground="White"
                              Opacity="0.9"
                              HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Features List -->
                <StackPanel Spacing="16" Background="{ThemeResource LayerFillColorDefaultBrush}"
                           Padding="24" CornerRadius="8">

                    <TextBlock Text="What's Included:"
                              Style="{StaticResource BodyStrongTextBlockStyle}"
                              Margin="0,0,0,8"/>

                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE73E;"
                                 Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                 FontSize="20"/>
                        <TextBlock Text="Guided installation workflows"
                                  Style="{StaticResource BodyTextBlockStyle}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE73E;"
                                 Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                 FontSize="20"/>
                        <TextBlock Text="SharePoint cloud integration"
                                  Style="{StaticResource BodyTextBlockStyle}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE73E;"
                                 Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                 FontSize="20"/>
                        <TextBlock Text="Offline-first with local caching"
                                  Style="{StaticResource BodyTextBlockStyle}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE73E;"
                                 Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                                 FontSize="20"/>
                        <TextBlock Text="Progress tracking and reporting"
                                  Style="{StaticResource BodyTextBlockStyle}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <!-- Get Started Button -->
                <Button Content="Get Started"
                       Command="{x:Bind ViewModel.GetStartedCommand}"
                       Style="{StaticResource AccentButtonStyle}"
                       HorizontalAlignment="Stretch"
                       Padding="24,12"
                       FontSize="16">
                    <Button.Resources>
                        <ResourceDictionary>
                            <SolidColorBrush x:Key="AccentButtonBackground" Color="White"/>
                            <SolidColorBrush x:Key="AccentButtonForeground" Color="{ThemeResource SystemAccentColor}"/>
                        </ResourceDictionary>
                    </Button.Resources>
                </Button>

                <!-- Version Info -->
                <TextBlock Text="Version 1.0.0"
                          Style="{StaticResource CaptionTextBlockStyle}"
                          Foreground="White"
                          Opacity="0.7"
                          HorizontalAlignment="Center"
                          Margin="0,16,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
