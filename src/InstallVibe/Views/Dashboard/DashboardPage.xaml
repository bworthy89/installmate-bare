<Page
    x:Class="InstallVibe.Views.Dashboard.DashboardPage"
    x:Name="DashboardPageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:InstallVibe.ViewModels.Dashboard"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid Padding="24" MaxWidth="1400">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,24">
                <TextBlock Text="{x:Bind ViewModel.UserName, Mode=OneWay, FallbackValue='Welcome', TargetNullValue='Welcome'}"
                           x:Name="WelcomeText"
                           Style="{StaticResource TitleLargeTextBlockStyle}"
                           FontWeight="SemiBold"/>
                <TextBlock Text="Here's what's happening with your guides"
                           Style="{StaticResource BodyTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- Loading Indicator -->
            <ProgressRing Grid.Row="1"
                          IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                          Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                          Width="48" Height="48"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>

            <!-- Content -->
            <StackPanel Grid.Row="1" Spacing="32"
                        Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource InverseBoolToVisibilityConverter}}">

                <!-- Error Message -->
                <InfoBar IsOpen="{x:Bind ViewModel.ErrorMessage, Mode=OneWay, Converter={StaticResource NullToBoolConverter}}"
                         Severity="Error"
                         Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                         IsClosable="True"/>

                <!-- Empty State - First Time User -->
                <StackPanel Visibility="{x:Bind ViewModel.IsFirstTimeUser, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"
                            Spacing="24" HorizontalAlignment="Center" Margin="0,60,0,0" MaxWidth="500">
                    <FontIcon Glyph="&#xE8F1;" FontSize="96"
                              Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                    <StackPanel Spacing="8">
                        <TextBlock Text="Welcome to InstallVibe!"
                                   Style="{StaticResource TitleTextBlockStyle}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Get started by browsing our guide library to find installation and configuration guides for your needs."
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                    </StackPanel>
                    <Button Content="Browse All Guides"
                            Command="{x:Bind ViewModel.BrowseAllGuidesCommand}"
                            Style="{StaticResource AccentButtonStyle}"
                            HorizontalAlignment="Center"
                            Padding="24,12"/>
                </StackPanel>

                <!-- Quick Resume Section -->
                <StackPanel Spacing="16" Visibility="{x:Bind ViewModel.HasLastAccessed, Mode=OneWay}">
                    <TextBlock Text="Quick Resume"
                               Style="{StaticResource TitleTextBlockStyle}"/>

                    <Border Background="{ThemeResource AccentFillColorDefaultBrush}"
                            CornerRadius="8"
                            Padding="24"
                            PointerPressed="LastAccessedCard_PointerPressed"
                            PointerEntered="Card_PointerEntered"
                            PointerExited="Card_PointerExited">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Spacing="12">
                                <StackPanel Spacing="4">
                                    <TextBlock Text="{x:Bind ViewModel.LastAccessedGuide.Title, Mode=OneWay}"
                                               Style="{StaticResource SubtitleTextBlockStyle}"
                                               Foreground="White"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{x:Bind ViewModel.LastAccessedGuide.Description, Mode=OneWay}"
                                               Style="{StaticResource BodyTextBlockStyle}"
                                               Foreground="White"
                                               Opacity="0.9"
                                               TextWrapping="WrapWholeWords"
                                               MaxLines="2"/>
                                </StackPanel>

                                <ProgressBar Value="{x:Bind ViewModel.LastAccessedGuide.PercentComplete, Mode=OneWay}"
                                             Maximum="100"
                                             Foreground="White"
                                             Background="#33FFFFFF"
                                             Height="4"/>

                                <TextBlock Foreground="White" Opacity="0.8">
                                    <Run Text="{x:Bind ViewModel.LastAccessedGuide.PercentComplete, Mode=OneWay}"/>
                                    <Run Text="% Complete •"/>
                                    <Run Text="{x:Bind ViewModel.LastAccessedGuide.LastAccessedDisplay, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>

                            <FontIcon Grid.Column="1"
                                      Glyph="&#xE768;"
                                      FontSize="48"
                                      Foreground="White"
                                      Opacity="0.6"
                                      VerticalAlignment="Center"
                                      Margin="24,0,0,0"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Continue Your Work Section -->
                <StackPanel Spacing="16" Visibility="{x:Bind ViewModel.HasInProgressGuides, Mode=OneWay}">
                    <Grid>
                        <TextBlock Text="Continue Your Work"
                                   Style="{StaticResource TitleTextBlockStyle}"/>
                    </Grid>

                    <ItemsControl ItemsSource="{x:Bind ViewModel.InProgressGuides, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:GuideCardViewModel">
                                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="20"
                                        Margin="0,0,0,12"
                                        PointerPressed="GuideCard_PointerPressed"
                                        PointerEntered="Card_PointerEntered"
                                        PointerExited="Card_PointerExited"
                                        Tag="{x:Bind GuideId}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Spacing="12">
                                            <StackPanel Spacing="6">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Border Grid.Column="0"
                                                            Background="{ThemeResource AccentFillColorDefaultBrush}"
                                                            CornerRadius="4"
                                                            Padding="8,4"
                                                            Margin="0,0,12,0">
                                                        <TextBlock Text="{x:Bind Category}"
                                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                                   Foreground="White"
                                                                   FontWeight="SemiBold"/>
                                                    </Border>

                                                    <Button Grid.Column="2"
                                                            Width="32" Height="32"
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            Command="{Binding ElementName=DashboardPageRoot, Path=ViewModel.TogglePinGuideCommand}"
                                                            CommandParameter="{x:Bind GuideId}"
                                                            ToolTipService.ToolTip="Pin this guide">
                                                        <FontIcon Glyph="{x:Bind IsPinned, Mode=OneWay, Converter={StaticResource BoolToGlyphConverter}, ConverterParameter='&#xE840;|&#xE842;'}"
                                                                  FontSize="16"
                                                                  Foreground="{x:Bind IsPinned, Mode=OneWay, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Accent|Secondary'}"/>
                                                    </Button>
                                                </Grid>

                                                <TextBlock Text="{x:Bind Title}"
                                                           Style="{StaticResource SubtitleTextBlockStyle}"
                                                           FontWeight="SemiBold"/>

                                                <TextBlock Text="{x:Bind Description}"
                                                           Style="{StaticResource BodyTextBlockStyle}"
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                           TextWrapping="WrapWholeWords"
                                                           MaxLines="2"/>
                                            </StackPanel>

                                            <ProgressBar Value="{x:Bind PercentComplete}"
                                                         Maximum="100"
                                                         Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                                           Style="{StaticResource CaptionTextBlockStyle}"
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                    <Run Text="{x:Bind PercentComplete}"/>
                                                    <Run Text="% Complete •"/>
                                                    <Run Text="{x:Bind CompletedSteps}"/>
                                                    <Run Text="of"/>
                                                    <Run Text="{x:Bind TotalSteps}"/>
                                                    <Run Text="steps"/>
                                                </TextBlock>

                                                <TextBlock Grid.Column="1"
                                                           Text="{x:Bind EstimatedTimeDisplay}"
                                                           Style="{StaticResource CaptionTextBlockStyle}"
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            </Grid>
                                        </StackPanel>

                                        <FontIcon Grid.Column="1"
                                                  Glyph="&#xE76C;"
                                                  FontSize="20"
                                                  Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                  VerticalAlignment="Center"
                                                  Margin="16,0,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Two Column Layout for New Guides and Pinned Guides -->
                <Grid ColumnSpacing="24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- New Guides Section -->
                    <StackPanel Grid.Column="0" Spacing="16" Visibility="{x:Bind ViewModel.HasNewGuides, Mode=OneWay}">
                        <TextBlock Text="New Guides"
                                   Style="{StaticResource TitleTextBlockStyle}"/>

                        <ItemsControl ItemsSource="{x:Bind ViewModel.NewGuides, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:GuideCardViewModel">
                                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="16"
                                            Margin="0,0,0,12"
                                            PointerPressed="GuideCard_PointerPressed"
                                            PointerEntered="Card_PointerEntered"
                                            PointerExited="Card_PointerExited"
                                            Tag="{x:Bind GuideId}">
                                        <StackPanel Spacing="10">
                                            <Grid>
                                                <Border Background="{ThemeResource SystemFillColorSuccessBrush}"
                                                        CornerRadius="4"
                                                        Padding="8,4"
                                                        HorizontalAlignment="Left">
                                                    <TextBlock Text="{x:Bind Category}"
                                                               Style="{StaticResource CaptionTextBlockStyle}"
                                                               Foreground="White"
                                                               FontWeight="SemiBold"/>
                                                </Border>

                                                <Button HorizontalAlignment="Right"
                                                        Width="28" Height="28"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Command="{Binding ElementName=DashboardPageRoot, Path=ViewModel.TogglePinGuideCommand}"
                                                        CommandParameter="{x:Bind GuideId}">
                                                    <FontIcon Glyph="{x:Bind IsPinned, Mode=OneWay, Converter={StaticResource BoolToGlyphConverter}, ConverterParameter='&#xE840;|&#xE842;'}"
                                                              FontSize="14"/>
                                                </Button>
                                            </Grid>

                                            <TextBlock Text="{x:Bind Title}"
                                                       Style="{StaticResource BodyStrongTextBlockStyle}"/>

                                            <TextBlock Text="{x:Bind Description}"
                                                       Style="{StaticResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       TextWrapping="WrapWholeWords"
                                                       MaxLines="3"/>

                                            <Grid>
                                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                                                           Foreground="{ThemeResource TextFillColorTertiaryBrush}">
                                                    <Run Text="{x:Bind TotalSteps}"/>
                                                    <Run Text="steps •"/>
                                                    <Run Text="{x:Bind EstimatedTimeDisplay}"/>
                                                </TextBlock>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Pinned Guides Section -->
                    <StackPanel Grid.Column="1" Spacing="16" Visibility="{x:Bind ViewModel.HasPinnedGuides, Mode=OneWay}">
                        <TextBlock Text="Pinned Guides"
                                   Style="{StaticResource TitleTextBlockStyle}"/>

                        <ItemsControl ItemsSource="{x:Bind ViewModel.PinnedGuides, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:GuideCardViewModel">
                                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="16"
                                            Margin="0,0,0,12"
                                            PointerPressed="GuideCard_PointerPressed"
                                            PointerEntered="Card_PointerEntered"
                                            PointerExited="Card_PointerExited"
                                            Tag="{x:Bind GuideId}">
                                        <StackPanel Spacing="10">
                                            <Grid>
                                                <Border Background="{ThemeResource AccentFillColorDefaultBrush}"
                                                        CornerRadius="4"
                                                        Padding="8,4"
                                                        HorizontalAlignment="Left">
                                                    <TextBlock Text="{x:Bind Category}"
                                                               Style="{StaticResource CaptionTextBlockStyle}"
                                                               Foreground="White"
                                                               FontWeight="SemiBold"/>
                                                </Border>

                                                <FontIcon Glyph="&#xE840;"
                                                          FontSize="16"
                                                          HorizontalAlignment="Right"
                                                          Foreground="{ThemeResource SystemFillColorAttentionBrush}"/>
                                            </Grid>

                                            <TextBlock Text="{x:Bind Title}"
                                                       Style="{StaticResource BodyStrongTextBlockStyle}"/>

                                            <TextBlock Text="{x:Bind ProgressDisplay}"
                                                       Style="{StaticResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                       FontWeight="SemiBold"
                                                       Visibility="{x:Bind IsInProgress, Mode=OneWay}"/>

                                            <Grid>
                                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                                                           Foreground="{ThemeResource TextFillColorTertiaryBrush}">
                                                    <Run Text="{x:Bind TotalSteps}"/>
                                                    <Run Text="steps •"/>
                                                    <Run Text="{x:Bind EstimatedTimeDisplay}"/>
                                                </TextBlock>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Grid>

                <!-- Recently Completed Section -->
                <StackPanel Spacing="16" Visibility="{x:Bind ViewModel.HasCompletedGuides, Mode=OneWay}">
                    <TextBlock Text="Recently Completed"
                               Style="{StaticResource TitleTextBlockStyle}"/>

                    <ItemsControl ItemsSource="{x:Bind ViewModel.RecentlyCompletedGuides, Mode=OneWay}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsStackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:GuideCardViewModel">
                                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="16"
                                        Width="280"
                                        Margin="0,0,12,0"
                                        PointerPressed="GuideCard_PointerPressed"
                                        PointerEntered="Card_PointerEntered"
                                        PointerExited="Card_PointerExited"
                                        Tag="{x:Bind GuideId}">
                                    <StackPanel Spacing="10">
                                        <Grid>
                                            <FontIcon Glyph="&#xE73E;"
                                                      FontSize="18"
                                                      HorizontalAlignment="Left"
                                                      Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>

                                            <Button HorizontalAlignment="Right"
                                                    Width="28" Height="28"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Command="{Binding ElementName=DashboardPageRoot, Path=ViewModel.TogglePinGuideCommand}"
                                                    CommandParameter="{x:Bind GuideId}">
                                                <FontIcon Glyph="{x:Bind IsPinned, Mode=OneWay, Converter={StaticResource BoolToGlyphConverter}, ConverterParameter='&#xE840;|&#xE842;'}"
                                                          FontSize="14"/>
                                            </Button>
                                        </Grid>

                                        <TextBlock Text="{x:Bind Title}"
                                                   Style="{StaticResource BodyStrongTextBlockStyle}"/>

                                        <TextBlock Text="{x:Bind CompletedDateDisplay}"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>

                                        <Border Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                                CornerRadius="4"
                                                Padding="8,4">
                                            <TextBlock Text="{x:Bind Category}"
                                                       Style="{StaticResource CaptionTextBlockStyle}"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Quick Actions Section -->
                <StackPanel Spacing="16">
                    <TextBlock Text="Quick Actions"
                               Style="{StaticResource TitleTextBlockStyle}"/>

                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Command="{x:Bind ViewModel.BrowseAllGuidesCommand}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Style="{StaticResource AccentButtonStyle}"
                                Padding="16">
                            <StackPanel Spacing="8">
                                <FontIcon Glyph="&#xE8F1;" FontSize="24"/>
                                <TextBlock Text="Browse All Guides"
                                           Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="1"
                                Command="{x:Bind ViewModel.OpenSettingsCommand}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Padding="16">
                            <StackPanel Spacing="8">
                                <FontIcon Glyph="&#xE713;" FontSize="24"/>
                                <TextBlock Text="Settings"
                                           Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="2"
                                Command="{x:Bind ViewModel.OpenAdminPanelCommand}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Padding="16">
                            <StackPanel Spacing="8">
                                <FontIcon Glyph="&#xE7EF;" FontSize="24"/>
                                <TextBlock Text="Admin Panel"
                                           Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
