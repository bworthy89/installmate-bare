    Version="1.0.0.0"
    Uri="https://{tenant}.sharepoint.com/sites/InstallVibe/AppUpdates/InstallVibe.appinstaller">

    <MainPackage
        Name="InstallVibe"
        Publisher="CN=InstallVibe"
        Version="1.0.0.0"
